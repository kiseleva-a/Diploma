<resources>
    <!-- Base application theme. -->
    <style name="Theme.NeWork" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.LikeCheckBox"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/like_checkbox_tint</item>
        <item name="android:minHeight">@dimen/picture_size</item>
        <item name="android:minWidth">@dimen/picture_size</item>
    </style>

    <style name="Widget.AppTheme.ParticipantCheckBox"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/participant_checkbox_tint</item>
        <item name="android:minHeight">@dimen/picture_size</item>
        <item name="android:minWidth">@dimen/picture_size</item>
    </style>

    <style name="Widget.AppTheme.UserCheckBox"
        parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/user_checkbox_tint</item>
    </style>

    <style name="Widget.AppTheme.GrayButtons"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:minHeight">@dimen/picture_size</item>
        <item name="android:minWidth">@dimen/picture_size</item>
    </style>

</resources>